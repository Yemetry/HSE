@model IEnumerable<Practica_new.Models.Motherboard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div align="right">
<form asp-controller = "Motherboards" asp-action = "Index" method = "post">
    <table>
        <tr>
            <td>
                 <input name = "Search" width = 1000/>

            </td>
            <td>
                    <input type = "submit" value = "Найти"/>
            </td>
        </tr>
    </table>
</form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameMotherboard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocketProcessor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberSlotsRam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberM2storageSlots)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chipset)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormFactor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameMotherboard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocketProcessor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberSlotsRam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberM2storageSlots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chipset)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormFactor)
            </td>
            <td>
               <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Motherboards/Edit/@item.IdMotherboard">Изменение</a> 
                <a width = "33%"class="btn btn-outline-primary" role="button" href="~/Motherboards/Details/@item.IdMotherboard">Детали</a>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Motherboards/Delete/@item.IdMotherboard">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
