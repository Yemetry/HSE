@model IEnumerable<Practica_new.Models.Cpucool>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div align="right">
<form asp-controller = "Cpucools" asp-action = "Index" method = "post">
    <table>
        <tr>
            <td>
                 <input name = "Search" width = 1000/>

            </td>
            <td>
                    <input type = "submit" value = "Найти"/>
            </td>
        </tr>
    </table>
</form>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameCpucool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompatibleSockets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tdp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCpucool)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompatibleSockets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tdp)
            </td>
            <td>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Cpucools/Edit/@item.IdCpucool">Изменение</a> 
                <a width = "33%"class="btn btn-outline-primary" role="button" href="~/Cpucools/Details/@item.IdCpucool">Детали</a>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Cpucools/Delete/@item.IdCpucool">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
