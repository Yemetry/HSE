@model IEnumerable<Practica_new.Models.Cpu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div align="right">
<form asp-controller = "Cpus" asp-action = "Index" method = "post">
    <table>
        <tr>
            <td>
                 <input name = "Search" width = 1000/>

            </td>
            <td>
                    <input type = "submit" value = "Найти"/>
            </td>
        </tr>
    </table>
</form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameCpu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeriesCpu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountCore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tdp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnergyConsumptionCpu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCpu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesCpu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountCore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tdp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnergyConsumptionCpu)
            </td>
            <td>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Cpus/Edit/@item.IdCpu">Изменение</a> 
                <a width = "33%"class="btn btn-outline-primary" role="button" href="~/Cpus/Details/@item.IdCpu">Детали</a>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Cpus/Delete/@item.IdCpu">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
