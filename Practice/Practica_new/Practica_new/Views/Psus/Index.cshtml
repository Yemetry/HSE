@model IEnumerable<Practica_new.Models.Psu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div align="right">
<form asp-controller = "Psus" asp-action = "Index" method = "post">
    <table>
        <tr>
            <td>
                 <input name = "Search" width = 1000/>

            </td>
            <td>
                    <input type = "submit" value = "Найти"/>
            </td>
        </tr>
    </table>
</form>

</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamePsu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountPower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certificate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePsu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificate)
            </td>
            <td>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Psus/Edit/@item.IdPsu">Изменение</a> 
                <a width = "33%"class="btn btn-outline-primary" role="button" href="~/Psus/Details/@item.IdPsu">Детали</a>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Psus/Delete/@item.IdPsu">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
