@model IEnumerable<Practica_new.Models.Gpu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div align="right">
<form asp-controller = "Gpus" asp-action = "Index" method = "post">
    <table>
        <tr>
            <td>
                 <input name = "Search" width = 1000/>

            </td>
            <td>
                    <input type = "submit" value = "Найти"/>
            </td>
        </tr>
    </table>
</form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameGpu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GraphicsProc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountMemory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeMemory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnergyConsumptionGpu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameGpu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraphicsProc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountMemory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeMemory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnergyConsumptionGpu)
            </td>
            <td>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Gpus/Edit/@item.IdGpu">Изменение</a> 
                <a width = "33%"class="btn btn-outline-primary" role="button" href="~/Gpus/Details/@item.IdGpu">Детали</a>
                <a width = "33%" class="btn btn-outline-primary" role="button" href="~/Gpus/Delete/@item.IdGpu">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
