@model Practica_new.Models.Ram

@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавить</h1>

<h4>Оперативную память</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameRam" class="control-label"></label>
                <input asp-for="NameRam" class="form-control" />
                <span asp-validation-for="NameRam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountMemoryRam" class="control-label"></label>
                <select asp-for="AmountMemoryRam" class ="form-control" asp-items="ViewBag.AmountMemoryRam"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeMemoryRam" class="control-label"></label>
                <select asp-for="TypeMemoryRam" class ="form-control" asp-items="ViewBag.TypeMemoryRam"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumbersModulesRam" class="control-label"></label>
                <select asp-for="NumbersModulesRam" class ="form-control" asp-items="ViewBag.NumbersModulesRam"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться на прошлую страницу</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
// переопределение валидации на стороне клиента
$.validator.methods.range = function (value, element, param) {
var globalizedValue = value.replace(",", ".");
return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
}

$.validator.methods.number = function (value, element) {
return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
}
</script>
}
